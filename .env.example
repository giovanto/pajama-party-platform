# MVP Environment Configuration - Pajama Party Platform

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database (SQLite for MVP)
DB_TYPE=sqlite
SQLITE_PATH=./data/pajama_party_mvp.db

# Mapbox Configuration (REQUIRED)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Discord Integration (Basic MVP)
DISCORD_INVITE_URL=https://discord.gg/your_action_group_invite

# Basic Security
SESSION_SECRET=your_random_session_secret_here

# MVP Features Only
ENABLE_DEMO_DATA=true
DEMO_DATA_COUNT=25

# Back-on-Track Integration
BOT_WEBSITE_URL=https://back-on-track.eu
PLATFORM_URL=http://localhost:3000
PLATFORM_NAME="Pajama Party Platform"

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# External APIs
OPENRAILWAYMAP_API_URL=https://api.openrailwaymap.org/v2