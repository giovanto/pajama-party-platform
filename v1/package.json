{
  "name": "pajama-party-platform",
  "version": "1.0.0",
  "description": "Where would you like to wake up tomorrow? A platform for European night train advocacy and community building.",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/main.css -o public/css/styles.css",
    "build:js": "esbuild src/js/main.js --bundle --outfile=public/js/bundle.js",
    "setup": "npm run setup:db && npm run setup:data",
    "setup:db": "node scripts/setup-database.js",
    "setup:data": "node scripts/import-stations.js",
    "clean": "rm -rf public/css public/js coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "night-trains",
    "back-on-track",
    "activism",
    "sustainable-transport",
    "europe",
    "community-building",
    "advocacy"
  ],
  "author": "Giovanni Antoniazzi <giovanni@back-on-track.eu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/back-on-track/pajama-party-platform"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "nodemailer": "^6.9.4",
    "uuid": "^9.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "postcss": "^8.4.26",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.18.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ]
}